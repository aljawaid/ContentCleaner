{
    "env": {
        "browser": true,
        "commonjs": true,
        "jquery": true,
        "es2021": true
    },
    "root": true,
    "extends": "eslint:recommended",
    "ignorePatterns": ["clipboard-*.min.js", "**/vendor/*.js"],
    "globals": {
      "ClipboardJS": "readonly"
    },
    "rules": {
        "no-undef": "warn"
    },
    "overrides": [
        {
            "files": "*.json",
            "extends": [
                "plugin:jsonc/recommended-with-json"
            ],
            "parser": "jsonc-eslint-parser",
            "parserOptions": {
                "jsonSyntax": "JSON"
            }
        },
        {
            "files": [".jsonc"],
            "extends": [
                "plugin:jsonc/recommended-with-jsonc"
            ],
            "parser": "jsonc-eslint-parser",
            "parserOptions": {
                "jsonSyntax": "JSONC"
            }
        },
        {
            "files": ["*.json5"],
            "extends": [
                "plugin:jsonc/recommended-with-json5"
            ],
            "parser": "jsonc-eslint-parser",
            "parserOptions": {
                "jsonSyntax": "JSON5"
            }
        }
    ]
}
